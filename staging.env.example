# Staging Environment Configuration Template
# Copy this file to .env.staging and update with your staging values

# Application Environment
NODE_ENV=staging
NEXT_PUBLIC_APP_ENV=staging
NEXT_PUBLIC_APP_NAME=NMBR Platform (Staging)
NEXT_PUBLIC_APP_VERSION=1.0.0-staging

# Supabase Configuration (Staging)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key
SUPABASE_DB_URL=postgresql://postgres:password@db.your-staging-project.supabase.co:5432/postgres

# Stripe Configuration (Staging - Test Mode)
STRIPE_SECRET_KEY=sk_test_your-staging-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-staging-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-staging-webhook-secret
STRIPE_WEBHOOK_ENDPOINT_SECRET=whsec_your-staging-endpoint-secret

# Database Configuration
DATABASE_URL=postgresql://postgres:password@db.your-staging-project.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:password@db.your-staging-project.supabase.co:5432/postgres

# Redis Configuration (Staging)
REDIS_URL=redis://your-staging-redis-instance:6379
REDIS_PASSWORD=your-staging-redis-password

# Email Configuration (Staging)
SMTP_HOST=smtp.your-staging-provider.com
SMTP_PORT=587
SMTP_USER=your-staging-smtp-user
SMTP_PASSWORD=your-staging-smtp-password
SMTP_FROM=noreply@staging.nmbrplatform.com

# Email Service Configuration
RESEND_API_KEY=re_your-staging-resend-key
SENDGRID_API_KEY=SG.your-staging-sendgrid-key

# File Storage Configuration (Staging)
AWS_ACCESS_KEY_ID=your-staging-aws-access-key
AWS_SECRET_ACCESS_KEY=your-staging-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=nmbr-platform-staging
AWS_S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# CDN Configuration (Staging)
CDN_URL=https://cdn-staging.nmbrplatform.com
CLOUDFLARE_API_TOKEN=your-staging-cloudflare-token
CLOUDFLARE_ZONE_ID=your-staging-zone-id

# Monitoring and Analytics (Staging)
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=nmbr-platform-staging
SENTRY_AUTH_TOKEN=your-staging-sentry-token

# Analytics (Staging)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-STAGING
MIXPANEL_TOKEN=your-staging-mixpanel-token
AMPLITUDE_API_KEY=your-staging-amplitude-key

# Logging Configuration (Staging)
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=logs/staging.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Security Configuration (Staging)
JWT_SECRET=your-staging-jwt-secret-key
ENCRYPTION_KEY=your-staging-encryption-key
CSRF_SECRET=your-staging-csrf-secret
SESSION_SECRET=your-staging-session-secret

# Rate Limiting (Staging - More Lenient)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Cache Configuration (Staging)
CACHE_TTL=300000
CACHE_MAX_SIZE=10000
CACHE_CLEANUP_INTERVAL=600000

# Feature Flags (Staging)
FEATURE_FLAGS_ENABLED=true
FEATURE_FLAGS_PROVIDER=launchdarkly
LAUNCHDARKLY_SDK_KEY=your-staging-launchdarkly-key

# API Configuration (Staging)
API_BASE_URL=https://api-staging.nmbrplatform.com
API_VERSION=v1
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Webhook Configuration (Staging)
WEBHOOK_SECRET=your-staging-webhook-secret
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3

# External Services (Staging)
TWILIO_ACCOUNT_SID=your-staging-twilio-sid
TWILIO_AUTH_TOKEN=your-staging-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Social Media (Staging)
FACEBOOK_APP_ID=your-staging-facebook-app-id
FACEBOOK_APP_SECRET=your-staging-facebook-secret
GOOGLE_CLIENT_ID=your-staging-google-client-id
GOOGLE_CLIENT_SECRET=your-staging-google-secret

# Payment Processing (Staging)
PAYPAL_CLIENT_ID=your-staging-paypal-client-id
PAYPAL_CLIENT_SECRET=your-staging-paypal-secret
PAYPAL_WEBHOOK_ID=your-staging-paypal-webhook-id

# Notification Services (Staging)
PUSH_NOTIFICATION_KEY=your-staging-push-key
FCM_SERVER_KEY=your-staging-fcm-key
APNS_KEY_ID=your-staging-apns-key-id
APNS_TEAM_ID=your-staging-apns-team-id

# Backup Configuration (Staging)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=nmbr-platform-staging-backups

# Development Tools (Staging)
DEBUG_MODE=true
PROFILING_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_REPORTING=true

# Testing Configuration (Staging)
TEST_MODE=true
MOCK_EXTERNAL_SERVICES=true
FAKE_PAYMENT_PROCESSING=true
SAMPLE_DATA_ENABLED=true

# Staging-specific URLs
STAGING_DOMAIN=staging.nmbrplatform.com
STAGING_API_DOMAIN=api-staging.nmbrplatform.com
STAGING_CDN_DOMAIN=cdn-staging.nmbrplatform.com
STAGING_ADMIN_DOMAIN=admin-staging.nmbrplatform.com

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Maintenance Mode (Staging)
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing maintenance. Please check back soon.

# Staging-specific Features
STAGING_FEATURES_ENABLED=true
DEBUG_PANEL_ENABLED=true
TEST_DATA_ENABLED=true
MOCK_NOTIFICATIONS=true
